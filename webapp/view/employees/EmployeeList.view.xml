<mvc:View
    controllerName="sap.ui.demo.nav.controller.employees.EmployeeList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page id="employeeListPage"
          title="{i18n>EmployeeList.title}"
          showNavButton="true"
          navButtonPress="onNavBack"
          class="sapUiResponsiveContentPadding">
        <content>
            <List id="employeeList"
                  headerText="{i18n>EmployeeList.ListOfAllEmployees}"
                  items="{/Employees}">
                <items>
                    <StandardListItem
                        title="{FirstName} {LastName}"
                        iconDensityAware="false"
                        iconInset="false"/>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>
